<html>
    <head>
        <title>Smriti Hotel Application</title>
        <script src="https://code.jquery.com/jquery-1.12.1.min.js" integrity="sha256-I1nTg78tSrZev3kjvfdM5A5Ak/blglGzlaZANLPDl3I=" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1>Register</h1>
        <%- include ('./partials/messages') %>
        <div>
            <form action="/signup" method="post">
                <label for="Name">Name:</label><br>
                <input type="text", name="Name", placeholder="Your Name e.g 'Ramesh'", required="true"><br>
                <lable for="Address">Address:</lable><br>
                <input type="text", name="addres", placeholder="e.g. 786/455 Uncha Mandi Prayagraj",required="true"><br>
                <label for="id">Select id You have</label><br>
                <select name = "id" id = "id">
                   <option value="Addhar">Addhar Card</option>
                   <option value="Pan">Pan Card</option>
                </select><br>
                <label for="Id_number">Enter the Id number You selected</label><br>
                <input type="text", name="Id_number", required="true"><br>
                <label for="contact">Contact Number</label><br>
                <input type="tel", name="contact",placeholder="e.g. 9813.....", required="true"><br>
                <label for="email">E-mail Address</label><br>
                <input type="email", name="email", required="true"><br>
                <label for="password">Password</label><br>
                <input type="password", name="password", required="true"><br>
                <label for="password2">Confirm Password</label><br>
                <input type="password", name="password2", required="true"><br>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <p>Have An Account? <a href="/login">Login</a></p>
        </div>
    </body>
</html>
