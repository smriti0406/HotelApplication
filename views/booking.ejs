<html>
    <head>
        <title>Smriti Hotel Application</title>
        <!-- <script src="https://code.jquery.com/jquery-1.12.1.min.js" integrity="sha256-I1nTg78tSrZev3kjvfdM5A5Ak/blglGzlaZANLPDl3I=" crossorigin="anonymous"></script> -->
    </head>
    <body>
        <div id = "query">
            <% if(user.Name=="guest") {%>
                <a href="/login" >login</a><br>
            <% }  %>
            <% if(user.Name!="guest") {%>
                <a href="/user?Name=<%=user.Name%>" >Your Account</a>
            <% } %>
            <p>Room: <%=field.room%></p>
            <p>Probable CheckIn Date & Time: <%=field.entry%></p>
            <p>Probable CheckOut Date & time: <%=field.exit%></p>
            <p>Estimated Intial Price: <%=field.price%></p>
            <form action="/booking?booking=<%=field.room%>p<%=field.entry%>p<%=field.exit%>p<%=field.price%>", method="post">
                <label for="Name">Name:</label><br>
                <input type="text", name="Name", value="<%=user.Name%>", required="true"><br>
                <lable for="Address">Address:</lable><br>
                <input type="text", name="addres", value="<%=user.Address%>",required="true"><br>
                <label for="id">Select id You have</label><br>
                <select name = "id" id = "id" value="<%=user.ID%>">
                   <option value="Addhar">Addhar Card</option>
                   <option value="Pan">Pan Card</option>
                </select><br>
                <label for="Id_number">Enter the Id number You selected</label><br>
                <input type="text", name="Id_number", value="<%=user.Id_number%>", required="true"><br>
                <label for="contact">Contact Number</label><br>
                <input type="tel", name="contact", value="<%=user.Contact%>", required="true"><br>
                <button type="submit" class="btn btn-primary btn-block">Confirm Booking</button>
            </form>
            <% if(user.Name!="guest") {%>
                <form action="/logout" method="POST">
                    <button type="submit">logout</button>
                </form>
            <% } %>
        </div>
    </body>
</html>
